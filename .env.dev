# =============================================================================
# Development Environment Configuration
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@db:5432/ai_chat
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_chat
PG_SSL=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
SALT_ROUNDS=10

# =============================================================================
# FILE STORAGE (MINIO/S3)
# =============================================================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=user-documents

# =============================================================================
# VECTOR STORE (PINECONE)
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=legal-documents-dev
PINECONE_TOP_K=5

# =============================================================================
# AI/LLM SERVICES
# =============================================================================
HUGGINGFACE_HUB_TOKEN=your-huggingface-token
HUGGINGFACE_CHAT_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_SUMMARY_MODEL=facebook/bart-large-cnn

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================
MAX_UPLOAD_BYTES=10485760
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_CONTEXT_TOKENS=2000

# =============================================================================
# WEB CRAWLER & ENRICHMENT
# =============================================================================
CRAWLER_USER_AGENT=user-doc-chat/1.0 (+enrichment)
CRAWLER_MAX_BYTES=2000000

# =============================================================================
# GRPC SANITIZER SERVICE
# =============================================================================
SANITIZER_HOST=python_apis:50051
SANITIZER_TIMEOUT=10000

# TLS Configuration - Development (insecure by default)
SANITIZER_TLS_ENABLED=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
