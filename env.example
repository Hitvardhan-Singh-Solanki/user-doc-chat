# Environment Configuration Template
# Copy this file to .env.local, .env.development, .env.production, etc.
# and fill in the actual values. NEVER commit actual secrets to version control.

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=user_doc_chat
DB_USER=postgres
DB_PASSWORD=your_db_password

# Redis Configuration (Docker defaults - for local development use localhost)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
# CRITICAL: Generate a cryptographically secure secret (minimum 256 bits/32 bytes)
# Use: openssl rand -base64 32
# Or use your secrets manager to provide this value
JWT_SECRET=your_cryptographically_secure_jwt_secret_here
JWT_EXPIRES_IN=3600
JWT_AUDIENCE=your-app-audience
JWT_ISSUER=your-app-issuer
JWT_MAX_AGE=86400

# External API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
SERP_API_KEY=your_serp_api_key
BING_SEARCH_API_KEY=your_bing_search_api_key
BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search

# Vector Database Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Vector Distance Configuration
# Supported values: cosine, euclidean, inner_product
# cosine: Uses <-> operator (cosine distance, range [0,2])
# euclidean: Uses <#> operator (L2 distance, unbounded)
# inner_product: Uses <#> operator (negative inner product, unbounded)
VECTOR_DISTANCE_OPERATOR=cosine

# Storage Configuration (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_USE_SSL=false
S3_BUCKET=your_s3_bucket_name

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Docker Development Configuration
# These variables control the UID/GID of the container user to match host ownership
# when using bind mounts. Set to your host user's UID/GID to avoid permission issues.
# Get your UID/GID with: id -u && id -g
UID=1000
GID=1000

# Monitoring and Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Email Configuration (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Security Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=10485760
