# =============================================================================

# AI Legal Document Q&A App - Environment Configuration
# =============================================================================

# Copy this file to .env and update the values for your environment

# =============================================================================

# APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# =============================================================================

# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_chat
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_chat
PG_SSL=false

# =============================================================================

# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================

# AUTHENTICATION & SECURITY
# =============================================================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
SALT_ROUNDS=10

# =============================================================================

# FILE STORAGE (MINIO/S3)
# =============================================================================

MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=user-documents

# =============================================================================

# VECTOR STORE (PINECONE)
# Vector Store Provider Configuration
# Supported values: pinecone, pgvector
# Default: pinecone
VECTOR_STORE_PROVIDER=pinecone

# =============================================================================

PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=legal-documents
PINECONE_TOP_K=5

# =============================================================================

# AI/LLM SERVICES
# =============================================================================

# Hugging Face Configuration
HUGGINGFACE_HUB_TOKEN=your-huggingface-token
HUGGINGFACE_CHAT_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_SUMMARY_MODEL=facebook/bart-large-cnn

# Python LLM Service (Alternative to Hugging Face)
PYTHON_LLM_URL=http://localhost:8000

# =============================================================================

# DOCUMENT PROCESSING
# =============================================================================

# File Upload Limits
MAX_UPLOAD_BYTES=10485760  # 10MB

# Text Chunking Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_CONTEXT_TOKENS=2000

# =============================================================================

# WEB CRAWLER & ENRICHMENT
# =============================================================================

CRAWLER_USER_AGENT=user-doc-chat/1.0 (+enrichment)
CRAWLER_MAX_BYTES=2000000  # 2MB

# =============================================================================

# GRPC SANITIZER SERVICE
# =============================================================================

# Sanitizer Service Configuration
SANITIZER_HOST=python_apis:50051
SANITIZER_TIMEOUT=10000

# TLS Configuration for gRPC Sanitizer Service
# Set to 'true' to enable TLS even in development
SANITIZER_TLS_ENABLED=false

# TLS Certificate Paths (for production or when TLS is enabled)
# Root CA certificate for server verification
SANITIZER_TLS_CA_PATH=/app/certs/ca.pem

# Client certificate and key for mutual TLS (mTLS) - optional
SANITIZER_TLS_CERT_PATH=/app/certs/client.pem
SANITIZER_TLS_KEY_PATH=/app/certs/client-key.pem

# =============================================================================

# FRONTEND CONFIGURATION
# =============================================================================

FRONTEND_URL=http://localhost:3000

# =============================================================================

# MONITORING & OBSERVABILITY
# =============================================================================

# Add your monitoring service configurations here
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENDPOINT=http://localhost:9090
